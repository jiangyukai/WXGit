 <import src="../../common/template.wxml"/>

 <view class="index">
    <view class='nav-scroll'>
      <scroll-view class='scroll-view_H' scroll-x="true" style='width: 100%'>
        <text wx:for="{{section}}" wx:key="id" id="{{item.id}}" catchtap="handleTap" 
          class="nav-name {{item.id == currentId ? 'nav-hover' : ''}}">{{item.name}}
        </text>
      </scroll-view>
    </view>
<!-- <template is="loadings" data="{{loading,loadtxt}}" /> -->

<!--滚动部分-->
<view class="banner-scroll">
    <swiper indicator-dots="true" autoplay="true">
        <block wx:for="{{background}}" wx:key="*this">
            <swiper-item class="swiper{{item}}">
              <view class="swiper-item {{item}}"></view>
            </swiper-item>
        </block>
    </swiper>
</view>

<!--列表部分-->
<block wx:for='{{tradeList}}'>
   <!-- data-*属性在触发事件时获取  -->
   <view class='singleTrade' hover-class='item-press' catchtap='showTradeDetail' data-id='{{item.goodsId}}'>
     <view class='a'>
       <view class='name'>{{item.name}}</view>
       <view class='price'>{{item.price}}</view>
     </view>
   </view>
 </block>


</view>